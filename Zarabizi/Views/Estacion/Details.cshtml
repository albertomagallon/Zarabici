@model Zarabizi.Models.Estacion
@using Zarabizi.Resources;
@{
    ViewBag.Title = @Messages.lbl_Detalles;
}

<h2>@Messages.lbl_Detalles</h2>

<fieldset>
    <legend>@Messages.lbl_Estacion</legend>

    <div class="display-label">@Messages.form_Estacion_nombreEstacion</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.nombreEstacion)
    </div>

    <div class="display-label">@Messages.form_Estacion_ubicacionEstacion</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ubicacionEstacion)
    </div>

    <div class="display-label">@Messages.form_Estacion_anclajesEstacion</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.anclajesEstacion)
    </div>
</fieldset>
<p>
    @Html.ActionLink(@Messages.lbl_Editar, "Edit", new { id=Model.idEstacion }) |
    @Html.ActionLink(@Messages.lbl_VolverLista, "Index")
</p>
