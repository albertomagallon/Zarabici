@model Zarabizi.Models.Tarifa

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Tarifa</legend>

        @Html.HiddenFor(model => model.idTarifa)

        <div class="editor-label">
            @Html.LabelFor(model => model.diasTarifa)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.diasTarifa)
            @Html.ValidationMessageFor(model => model.diasTarifa)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nombreTarifa)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nombreTarifa)
            @Html.ValidationMessageFor(model => model.nombreTarifa)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fechaInicioTarifa)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fechaInicioTarifa)
            @Html.ValidationMessageFor(model => model.fechaInicioTarifa)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fechaFinalTarifa)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fechaFinalTarifa)
            @Html.ValidationMessageFor(model => model.fechaFinalTarifa)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.precioTarifa)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.precioTarifa)
            @Html.ValidationMessageFor(model => model.precioTarifa)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idOficina, "Oficina")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idOficina", String.Empty)
            @Html.ValidationMessageFor(model => model.idOficina)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
