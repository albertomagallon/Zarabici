@model Zarabizi.Models.Anclaje
@using Zarabizi.Resources
@{
    ViewBag.Title = @Messages.lbl_Editar;
}

<h2>@Messages.lbl_Editar</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Messages.lbl_Anclaje</legend>

        @Html.HiddenFor(model => model.idAnclaje)

        <div class="editor-label">
            @Html.LabelFor(model => model.estadoAnclaje)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.estadoAnclaje)
            @Html.ValidationMessageFor(model => model.estadoAnclaje)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ocupadoAnclaje)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ocupadoAnclaje)
            @Html.ValidationMessageFor(model => model.ocupadoAnclaje)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idEstacion, "Estacion")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idEstacion", String.Empty)
            @Html.ValidationMessageFor(model => model.idEstacion)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idBicicleta, "Bicicleta")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idBicicleta", String.Empty)
            @Html.ValidationMessageFor(model => model.idBicicleta)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(@Messages.lbl_VolverLista, "Index")
</div>
