@model Zarabizi.Models.Recorrido
@using Zarabizi.Resources
@{
    ViewBag.Title = @Messages.lbl_Editar;
}

<h2>@Messages.lbl_Editar</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Recorrido</legend>

        @Html.HiddenFor(model => model.idRecorrido)

        <div class="editor-label">
            @Html.LabelFor(model => model.distanciaRecorrido)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.distanciaRecorrido)
            @Html.ValidationMessageFor(model => model.distanciaRecorrido)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fechaSalidaRecorrido)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fechaSalidaRecorrido)
            @Html.ValidationMessageFor(model => model.fechaSalidaRecorrido)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fechaLlegadaRecorrido)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fechaLlegadaRecorrido)
            @Html.ValidationMessageFor(model => model.fechaLlegadaRecorrido)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idEstacionInicio, "Estacion1")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idEstacionInicio", String.Empty)
            @Html.ValidationMessageFor(model => model.idEstacionInicio)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idEstacionFinal, "Estacion")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idEstacionFinal", String.Empty)
            @Html.ValidationMessageFor(model => model.idEstacionFinal)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idBicicleta, "Bicicleta")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idBicicleta", String.Empty)
            @Html.ValidationMessageFor(model => model.idBicicleta)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idSocio, "Socio")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idSocio", String.Empty)
            @Html.ValidationMessageFor(model => model.idSocio)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(@Messages.lbl_VolverLista, "Index")
</div>
